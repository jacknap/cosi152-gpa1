<div class="row">
	<div class="col-md-6">
		<h2 class="text-center">Send Us a Message</h2>
		<form
			action="/contact"
			method="post"
		>
			<label
				for="name"
				class="form-label"
				>Your Name</label
			><br />
			<input
				type="text"
				name="name"
				class="form-control"
			/><br />
			<label
				for="email"
				class="form-label"
				>Your Email</label
			><br />
			<input
				type="email"
				name="email"
				class="form-control"
			/><br />
			<label
				for="message"
				class="form-label"
				>Your Message</label
			><br />
			<textarea
				name="message"
				id="message"
				cols="30"
				rows="10"
				class="form-control"
			></textarea
			><br />
			<input
				type="submit"
				value="Submit"
				class="btn btn-primary"
			/>
		</form>
